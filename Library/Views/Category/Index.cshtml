@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div  class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end" >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-journal-plus"></i>&nbsp;New Category</a>
        </div>
    </div>
</div>
<br /><br />
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Order</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                 <td width="10%">@item.Id</td>
                 <td width="30%">@item.Name</td>
                 <td width="20%">@item.DisplayOrder</td>
                 <td width="20%">@item.CreatedDateTime</td>
             </tr>
        }
    </tbody>

</table>

