@model IEnumerable<Library.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6 p-1" >
            <div class="p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="p-1" >
                        <img class="card-img-top rounded-1" src="@product.ImageUrl">
                        <div class="card-body">
                             <div class="p-1 ">
                                 <p class="card-title h5 text-primary mt-1">@product.Title</p>
                                 <p class="card-title text-secondary">by <b>@product.Author</b> </p>
                             </div>
                              <div class="p-1 ">
                                  <p>List Price: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                             </div>
                             <div class="p-1 ">
                                 <p>As low as: <b>$@product.Price100.ToString("0.00")</b></p>
                             </div>
                             <div>
                                 <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info form-control">
                                    Details
                                 </a>
                             </div>
                        </div>
                    </div>
                </div>
            </div>         
        </div>
    }
</div>
