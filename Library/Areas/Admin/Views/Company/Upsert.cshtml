@model Library.Models.Company

<form method="post" asp-action="Upsert" class="mt-4 mb-4">
    <input asp-for="Id" hidden />
    <div class="row">
        <div class="col-12 pt-4">
            <div class="border p-3 rounded-2" style="margin-top:-20px">
                <div class="col-12 p-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Update the " : "Create a new ") company : <strong style="color:black">@Model.Name</strong> </h2>
                    <hr />
                </div>
        @*<div asp-validation-summary="All"></div>*@
                <div class="mb-3">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" class="form-control" id="typeTitle" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StreetAddress"></label>
                    <input asp-for="StreetAddress" rows="2" class="form-control"></input>
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="mb-3 col-6">
                        <label asp-for="City"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="State"></label>
                        <input asp-for="State" class="form-control" />
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="mb-3 col-6">
                        <label asp-for="PostalCode"></label>
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3 col-6">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                      @if (Model.Id != 0)
                      {
                          <button class="btn rounded-3" type="submit" style="width:170px; background-color:orange; margin-right:10px">Updates</button>
                      }
                      else
                      {
                          <button class="btn btn-danger rounded-3" type="submit" onclick="return ValidateInput()" style="width:170px; margin-right:10px">Create</button>
                      }
                      <a asp-controller="Company" asp-action="Index" class="btn btn-info rounded-3" style="width:170px;margin-left:10px">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</form>
    
   

 




@section Scripts{
   @{
        <partial name="_ValidationScriptsPartial"></partial>
            
    }
}


                